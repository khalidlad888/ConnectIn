<li id="post-<%= post._id %>">
    <p>
        <% if (locals.user && locals.user.id==post.user.id) { %>
            <small>
                <a href="/posts/destroy/<%= post.id %>" class="delete-post-button">X</a>
            </small>
            <% } %>
                <%= post.content %>
                    <br>
                    <small>
                        <%= post.user.name %>
                    </small>
    </p>
    <div class="post-comments">
        <% if (locals.user) { %>
            <form action="/comments/create" id="post-<%= post._id %>-comments-form" method="POST">
                <input id="post-comment-text" type="text" name="content" placeholder="Comment here..." required>
                <input type="hidden" name="post" value="<%= post._id %>">
                <input id="post-comment-submit" type="submit" value="Add Comment">
            </form>
            <% } %>
                <div class="post-comments-list">
                    <ul id="post-comments-<%= post._id %>">
                        <% for (comment of post.comments){ %>
                            <p>
                                <%- include('_comment') -%>
                            </p>
                            <% } %>
                    </ul>
                </div>
    </div>
</li>